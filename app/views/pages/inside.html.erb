<% title("Dashboard") %>
<h1>Dashboard</h1>

<div class="row">
	<div class="col-sm-4">
		<h3>My Posts</h3>
		<% @posts.each do |post| %>
		   <li class="margin-md-down">
		     <%= link_to post.title, edit_admin_post_path(post.slug) %>
		     <small class="x-small-text"> - <%= time_ago_in_words(post.updated_at) %> ago</small>
		   </li>
		   <% end %>
	</div>
	<div class="col-sm-4">
		<h3>My Wishlist</h3>
	</div>
	<div class="col-sm-4">
		<h3>Actions</h3>
		<div class="col-sm-4"><%= link_to "New post", new_admin_post_path %></div>
	</div>
</div>
