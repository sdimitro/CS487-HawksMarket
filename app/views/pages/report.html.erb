<% title("Report") %>
<h1 class="page-title">Report Item</h1>

<div class="row">
  <div class="col-sm-6">

    <%= form_tag email_confirmation_path, method: 'post', html: {role: "form"} do %>

    <div class="form-group">
      <%= label_tag :item, "Relevant Item" %>
      <div class="row">
        <div class="col-xs-12">
          <%= text_field_tag :item, @item, value: params[:item], class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :message, "Explain your problem..." %>
      <div class="row">
        <div class="col-xs-12">
          <%= text_area_tag :message, @message, placeholder: "Be as specific as possible...", rows: 10, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 padded">
        <button class='btn btn-primary'>
          <i class='fa fa-envelope'></i> Send
        </button>
      </div>
    </div>
    <% end %>

  </div>
</div>
